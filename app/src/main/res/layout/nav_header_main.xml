<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    android:layoutDirection="rtl"
    android:paddingEnd="16dp"
    android:paddingTop="16dp"
    android:paddingStart="16dp"
    android:textDirection="rtl"
    android:background="@drawable/side_nav_header">

    <TextView
        android:id="@+id/tv_name_family_nav_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="نام و نام خانوادگی"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="14sp"
        android:visibility="visible"
        android:textStyle="bold"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/tv_phone_nav_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name_family_nav_header"
        android:layout_marginTop="16dp"
        android:text="شماره تلفن"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_price_nav_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000"
        android:padding="6dp"
        android:layout_below="@+id/tv_phone_nav_header"
        android:layout_alignParentEnd="true"
        android:textSize="25sp"
        android:textColor="#FFFFFF"/>



</RelativeLayout>