<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adress_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/edit_adress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="2dp"
            app:srcCompat="@drawable/ic_edit" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_adress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="عنوان"
                android:textColor="@color/title_address_FavAdress"
                android:textSize="@dimen/title_adress_FavAdress"
                android:textStyle="bold"
                android:layout_margin="4dp"/>

            <TextView
                android:id="@+id/description_adress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="محل درج ادرس"
                android:layout_margin="4dp"
                android:textColor="@color/title_address_FavAdress"
                android:textSize="@dimen/title_adress_FavAdress" />

        </LinearLayout>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_loc"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>